@using VTP_22_Dashboard.ViewModels.University
@model UniversityVM

@{
    ViewData["Title"] = "Index";
    int n = 1;
}

<div class="col-lg-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-center">
                <h4 class="card-title">University</h4>
            </div>
            <div class="d-flex justify-content-end">
                <a class="btn btn-success" asp-action="Create">Create</a>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var uni in Model.Universities)
                        {
                            <tr>
                                <td>@n</td>
                                <td>@uni.Name</td>
                                <td>
                                    <a asp-action="Update" class="btn btn-warning" asp-route-id="@uni.Id"><i class="mdi mdi-table-edit"></i></a>
                                    <form class="d-inline delete-btn" asp-action="Delete" asp-route-id="@uni.Id" method="post">
                                        <button type="submit" class="btn btn-danger delete-btn"><i class="mdi mdi-delete-forever"></i></button>
                                    </form>
                                </td>
                            </tr>
                            n++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>