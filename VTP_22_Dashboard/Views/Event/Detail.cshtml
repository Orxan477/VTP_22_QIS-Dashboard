@using VTP_22_Dashboard.ViewModels.Event
@model EventVM
@{
    ViewData["Title"] = "Detail";
}

<div class="col-lg-10 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="d-inline"><a asp-action="Index" class="mr-2 text-white"><i class="mdi mdi-arrow-left-bold-circle-outline"></i></a></h3>
            <h3 class="d-inline card-title">Event</h3>
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Name</th>
                            <th>@Model.Event.Name</th>
                        </tr>
                        <tr>
                            <td>Description</td>
                            <td>@Model.Event.Description</td>
                        </tr>
                        <tr>
                            <td>Department</td>
                            <td>@Model.Event.Departments.Name</td>
                        </tr>
                        <tr>
                            <td>Date</td>
                            <td>@Model.Event.Date</td>
                        </tr>
                        <tr>
                            <td>Location</td>
                            <td>@Model.Event.Location</td>
                        </tr>
                        <tr>
                            <td>Link</td>
                            @if (@Model.Event.Link == "")
                            {
                                <td>Meet link not avaliable</td>
                            }
                            else
                            {
                                <td><a href="@Model.Event.Link">Meet Link</a></td>
                            }

                        </tr>
                        <tr>
                            <td>Status</td>
                            @if (@Model.Event.Date <= DateTime.Now)
                            {
                                <td><label class="badge badge-success">Started</label></td>
                            }
                            else
                            {
                                <td><label class="badge badge-warning">Soon</label></td>
                            }
                        </tr>
                        <tr>
                            <td>
                                Settings
                            </td>
                            <td>
                                <a asp-action="Update" class="btn btn-warning" asp-route-id="@Model.Event.Id"><i class="mdi mdi-table-edit"></i></a>

                                @*<a asp-action="Delete" class="btn btn-danger" asp-route-id="@ev.Id"><i class="mdi mdi-calendar-remove"></i></a>*@
                                <form class="d-inline delete-btn" asp-action="Delete" asp-route-id="@Model.Event.Id" method="post">
                                    <button type="submit" class="btn btn-danger delete-btn"><i class="mdi mdi-calendar-remove"></i></button>
                                </form>
                                <a asp-action="IsActive" class="btn btn-secondary " asp-route-id="@Model.Event.Id"><i class="mdi mdi-calendar-multiple-check"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

