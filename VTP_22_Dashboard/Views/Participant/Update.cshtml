@using VTP_22_Dashboard.ViewModels.Participant
@model UpdatePraticipant
@{
    ViewData["Title"] = "Update";
}

<div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex justify-content-center">
                        <h4 class="card-title">Update</h4>
                    </div>
                    <form class="forms-sample" method="post">
                      <div class="form-group row">
                        <label for="exampleInputUsername2" class="col-sm-3 col-form-label" asp-for="FullName"></label>
                        <div class="col-sm-9">
                          <input asp-for="FullName" class="form-control" id="exampleInputUsername2">
                          <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                      </div>
                     <div class="form-group row">
                        <label for="exampleInputUsername2" class="col-sm-3 col-form-label" asp-for="Email"></label>
                        <div class="col-sm-9">
                          <input asp-for="Email" class="form-control" id="exampleInputUsername2">
                          <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                      </div>
                     <div class="form-group row">
                        <label for="exampleInputUsername2" class="col-sm-3 col-form-label" asp-for="UserName"></label>
                        <div class="col-sm-9">
                          <input asp-for="UserName" class="form-control" id="exampleInputUsername2">
                          <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                      </div>
                       <div class="form-group row">
                        <label for="exampleInputUsername2" class="col-sm-3 col-form-label" asp-for="PhoneNumber"></label>
                        <div class="col-sm-9">
                          <input asp-for="PhoneNumber" class="form-control" id="exampleInputUsername2">
                          <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                      </div>
                      <div class="form-group d-flex align-items-center justify-content-between">
                                <div>
                                    <label asp-for="UniversitiesId">University</label>
                                    <select asp-for="UniversitiesId" asp-items="@ViewBag.university" class="form-select" aria-label="Default select example">
                                        <span class="text-danger" asp-validation-for="UniversitiesId"></span>
                                    </select>
                                </div>
                                <div>
                                    <label asp-for="DepartmentsId">Department</label>
                                    <select asp-for="DepartmentsId" asp-items="@ViewBag.department" class="form-select" aria-label="Default select example">
                                        <span class="text-danger" asp-validation-for="DepartmentsId"></span>
                                    </select>
                                </div>
                            </div>
                      <button type="submit" class="btn btn-primary mr-2">Submit</button>
                      <a class="btn btn-white" asp-action="Index">Cancel</a>
                    </form>
                  </div>
                </div>
              </div>


